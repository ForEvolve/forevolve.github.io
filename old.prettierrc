{
    "$schema": "http://json.schemastore.org/prettierrc",
    "tabWidth": 2,
    "printWidth": 140,
    "singleQuote": true,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": [".prettierrc"],
            "options": {
                "parser": "json",
                "tabWidth": 2
            }
        }
    ]
}
